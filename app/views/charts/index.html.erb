<h2>My Charts</h2>

<ul class="list-group">
<% current_user.charts.each do |chart| %>
	<li class="list-group-item">
		<h4><%= link_to chart.title, edit_chart_path(chart), class: 'list-group-item-heading' %></h4>
		<p class="list-group-item-text">
			Last updated: <%= chart.last_updated %>
			<span style="float:right"><%= link_to 'Delete', chart, data: { confirm: "Are you sure you want to delete #{chart.title}?"}, method: :delete %></span>
		</p>
	</li>
	<% end %>
</ul>